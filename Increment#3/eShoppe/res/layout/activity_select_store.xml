<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<EditText android:id="@+id/searchstore"
    android:layout_width="130pt"
    android:layout_height="wrap_content"
    android:hint="Enter store to search"
    android:textStyle="bold|italic"
    android:layout_margin="5dp"
    android:maxLines="1"/>
<Button android:id="@+id/searchsubmit"
    android:layout_width="45pt"
    android:layout_height="wrap_content"
    android:text="Search"
    android:layout_toRightOf="@+id/searchstore"
    android:layout_alignBottom="@+id/searchstore"/>
<fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/searchstore"/>
</RelativeLayout>
